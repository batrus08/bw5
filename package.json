{
  "name": "bot-backend-advanced",
  "version": "1.1.0",
  "private": true,
  "description": "Express + Prisma backend for WhatsApp & Telegram bots (advanced features: rate limit, SLA tasks, spreadsheet sync, retries, dead letter).",
  "main": "server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "prisma generate && prisma db push && node server.js",
    "start:safe": "node server.js",
    "postinstall": "prisma generate",
    "dev": "node server.js",
    "prisma:generate": "prisma generate",
    "prisma:db-push": "prisma db push",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev --name init",
    "seed": "node src/db/migrate/seed.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "prisma": "^5.22.0",
    "@prisma/client": "^5.22.0"
  },
  "license": "MIT"
}
